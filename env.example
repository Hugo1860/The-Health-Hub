# 应用
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=please-change-to-a-long-random-string
DEBUG_AUTH=1

# 数据库 - 统一用 DATABASE_URL（mysqlAdapter 优先读取它）
DATABASE_URL=mysql://health_hub:health_hub@localhost:3306/health_hub

# 如果你更习惯用分散变量，也可以保留，但务必与 DATABASE_URL 完全一致
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=health_hub
DB_USERNAME=health_hub
DB_PASSWORD=health_hub

# CORS/安全（本地）
CORS_ORIGIN=http://localhost:3000

# 其他保持默认或按需填写
LOG_LEVEL=info
ENABLE_METRICS=true