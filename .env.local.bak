# 应用配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production-to-a-long-random-string
DEBUG_AUTH=1

# 数据库配置 - 统一使用 DATABASE_URL
DATABASE_URL=mysql://health_hub:health_hub@localhost:3306/health_hub

# 为兼容性保留分散变量（与 DATABASE_URL 保持一致）
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=health_hub
DB_USERNAME=health_hub
DB_PASSWORD=health_hub

# CORS/安全（本地开发）
CORS_ORIGIN=http://localhost:3000

# 日志配置
LOG_LEVEL=info
DEBUG_API=1

# 其他配置
ENABLE_METRICS=true
